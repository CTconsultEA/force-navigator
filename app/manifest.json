{
    "name": "Salesforce Navigator",
    "version": "0.5.14",
    "manifest_version": 2,
    "default_locale": "en",
    "browser_action": {
        "default_icon": "images/32.png"
        // "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": true
    },
    "web_accessible_resources": [
        "scripts/app/mainView.html",
        "bower_components/font-awesome/fonts/fontawesome-webfont.eot",
        "bower_components/font-awesome/fonts/fontawesome-webfont.svg",
        "bower_components/font-awesome/fonts/fontawesome-webfont.ttf",
        "bower_components/font-awesome/fonts/fontawesome-webfont.woff"
    ],
    "description": "",
    "content_scripts": [
        {
            "css": [
                "styles/main.css",
                "bower_components/font-awesome/css/font-awesome.css",
                "bower_components/angular-loading-bar/src/loading-bar.css"
            ],
            "matches": [
                "https://*.force.com/*",
                "https://*.salesforce.com/*","http://*/*",
                "https://*/*"
            ],
            "js": [
                // "scripts/templates.js",
                "scripts/util.js",
                // "bower_components/jquery/jquery.js",
                // "scripts/advancedsettings.js",
                // "bower_components/hogan/web/builds/2.0.0/hogan-2.0.0.js",
                // "bower_components/typeahead.js/dist/typeahead.js",
                // "bower_components/keymaster/keymaster.js",
                // "scripts/mousetrap.min.js",
                // "scripts/forceTooling.js",
                // "scripts/main.js"
                // "scripts/popup.js"
                "bower_components/angular/angular.js",
                "bower_components/angular-cookies/angular-cookies.js",
                "bower_components/angular-loading-bar/src/loading-bar.js",
                "scripts/app/app.js",
                "scripts/app/controllers.js",                
                "scripts/app/services.js",                
                "scripts/content.js"
            ],
            "run_at": "document_end"
        }
    ],
"commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle feature foo"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Ctrl+A",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+E",
    
        "mac": "Alt+P"
      }
    }
  },
    "permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "http://*/*",
        "https://*/*",
        "file://*/*",
        "storage",
        "cookies",
        "webNavigation"
    ]
}